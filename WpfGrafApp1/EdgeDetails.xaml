<Window x:Class="WpfGrafApp1.EdgeDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGrafApp1"
        mc:Ignorable="d"
        Title="EdgeDetails" Height="163" Width="155" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="edgeNameLabel" Content="Label" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="edgeWeightTextBox" HorizontalAlignment="Left" Margin="82,45,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="50" Height="22"/>
        <Label x:Name="edgeWeightLabel" Content="Weight:" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnOK" Content="Update" HorizontalAlignment="Left" Margin="10,98,0,0" VerticalAlignment="Top" Click="btnOK_Click" Width="50" IsDefault="True"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="82,98,0,0" VerticalAlignment="Top" Click="btnCancel_Click" Width="50" IsCancel="True"/>

    </Grid>
</Window>
